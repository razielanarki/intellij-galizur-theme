    <change-notes><![CDATA[

<h3>1.0.0</h3>
<ul>
    <li>Re-bundled alongside a matching UI theme.</li>
    <li><strong>Python</strong> support.</li>
    <li><strong>.properties</strong> support.</li>
    <li><strong>Makefiles</strong> support.</li>
    <li><strong>Rainbow Brackets</strong> support.</li>
    <li>Adjusted ANSI console theme</li>
    <li>Tweaked file status colors.</li>
</ul>

    ]]></change-notes>

    <idea-version since-build="193.0" />

    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <themeProvider id="b659eb65-4df9-4408-9d24-4284a3039cf3" path="/META-INF/galizur.theme.json" />
        <bundledColorScheme path="/META-INF/galizur.scheme" />
    </extensions>

</idea-plugin>
